<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_color"
            app:titleTextColor="@color/white"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Search and Filter Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Search Bar -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="ðŸ” Cari member (nama, email, phone)"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Toggle Filters Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnToggleFilters"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="ðŸ”½Filter"
                    android:textSize="12sp"
                    android:backgroundTint="@color/blue"
                    android:textColor="@color/white"
                    android:layout_marginEnd="12dp"
                    style="@style/Widget.MaterialComponents.Button" />

                <Button
                    android:id="@+id/btnClearSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Reset"
                    android:textSize="12sp"
                    android:backgroundTint="@color/secondary_color"
                    android:textColor="@color/white"
                    style="@style/Widget.MaterialComponents.Button" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvResultCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menampilkan 0 member"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Filter Section (Initially Hidden) -->
            <LinearLayout
                android:id="@+id/layoutFilters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Filter Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <!-- Membership Filter -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’³ Filter Membership"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="4dp" />

                        <Spinner
                            android:id="@+id/spinnerMembershipFilter"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:entries="@array/membership_filter_options"
                            android:background="@drawable/spinner_background" />

                    </LinearLayout>

                    <!-- Status Filter -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŸ¢ Filter Status"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="4dp" />

                        <Spinner
                            android:id="@+id/spinnerStatusFilter"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:entries="@array/status_filter_options"
                            android:background="@drawable/spinner_background" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Sort Options -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Urutkan"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spinnerSort"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:entries="@array/sort_options"
                        android:background="@drawable/spinner_background" />

                </LinearLayout>

                <!-- Filter Tips -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Tips: Gunakan filter untuk mempersempit pencarian dan sorting untuk mengurutkan hasil"
                    android:textSize="11sp"
                    android:textColor="@color/blue"
                    android:background="@color/background_color"
                    android:padding="8dp"
                    android:layout_marginTop="4dp"
                    android:drawablePadding="4dp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMembers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:clipToPadding="false" />

        <TextView
            android:id="@+id/tvEmptyState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ðŸ‘¥ Belum ada member"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:padding="32dp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>